mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")

mixin upt(t, bg, color, size)
	+b.up-title
		.row
			.col-auto
				+e.text= t
			.col
				+e.line

mixin btn-file()
	+b.btn-file.row
		mixin item(t, s)
			+e.col.col-sm-auto
				+e.file(href="#" download)
					img(src="img/svg/docs.svg" loading="lazy", alt="")
					div
						+e.title= t
						+e.text= s
		+item(`Презентация`,`PDF 2 mb`)
		+item(`Манифест`,`PDF 3 mb`)
		+item(`Заявление о включении`,`DOCx 1.6 mb`)