mixin sPartnersSlider(data)
	// start sPartnersSlider
	+b.sPartnersSlider.section#sPartnersSlider&attributes(attributes)
		.container
			+e.wrap
				+e.slider--js.swiper
					.swiper-wrapper
						- for (var x = 0; x < 4; x++)
							+e.slide.swiper-slide
								picture
									source(media='(min-width:576px)' srcset='img/sPartnersSlider-img-1.jpg')
									img(src='img/sPartnersSlider-img-1.jpg' alt='Flowers' style='width:auto;')
					+e.control-wrap
						.swiper-pagination
						+arrow()
	// end sPartnersSlider