mixin sManager(data)
	// start sManager
	+b.sManager.section#sManager&attributes(attributes)
		.container
			.row
				.col-lg-3
					+pic('manager-1.png','',0)
				.col-lg-9
					+e.wrap
						+e.job Председатель правления
						h2 Иван Владимирович Ожгихин
						+e.birth
							+e.date
							+e.city
						+e.mini-caption Ассоциация разработчиков, производителей и&nbsp;пользователей медицинской техники (МАМТ), АО&nbsp;&laquo;РОСНАНО&raquo;
						mixin block-item(date,text,small)
								+e.block-item
									+e.block-item-date!=date
									+e.block-item-text
										+e.block-item-caption!=text
										if (small)
											+e.block-item-small!=small
						mixin block-item2(date,text,...items)
							+e.block-item
								+e.block-item-date!=date
								+e.block-item-text
									+e.block-item-caption!=text
									ul
										each item in items
											li!=item
						+e.block
							h5 Образование
							+block-item(`1998 г.`,`Курганская государственная сельскохозяйственная академия им. Т.С. Мальцева, специальность &laquo;Бухгалтерский учет и&nbsp;аудит&raquo;`)
							+block-item(`2004 г.`,`Уральский федеральный университет&nbsp;им. первого Президента России Б.Н. Ельцина, магистр, специальность &laquo;Менеджмент&raquo;`)
							+block-item(`2021 г.`,`Санкт-Петербургский политехнический университет Петра Великого, кандидат экономических наук`)
						+e.block
							h5 Профессиональная трудовая деятельность
							+block-item(`1998-2000`,`ООО «Зауральский экономический арбитраж-аудит»`,`Старший бухгалтер - аудитор`)
							+block-item2(`2000-2013`,`ОАО «Производственное объединение «Уральский оптико-механический завод» имени Э.С. Яламова» `,`Заместитель директора по развитию и маркетингу дирекции по продажам гражданской продукции`,`Начальник департамента продаж – Директор Московского филиала`)
							+block-item(`2013-2020`,`ООО «Швабе-Москва»`,`Директор`)
							+block-item(`2016-2020`,`АО «Швабе»`,`Заместитель генерального директора по развитию продаж, маркетингу и сервисной поддержки гражданской продукции (по совмещению)`)
							+block-item(`2020-2021`,`АО «Швабе»`,`Заместитель генерального директора по развитию продаж, маркетингу и сервисной поддержки гражданской продукции`)
							+block-item(`2021-н.в.`,`ООО «УК «РОСНАНО»`,`Старший управляющий директор по развитию`)
						+e.block
							h5 Награды/Почетные звания/Знаки отличия/Победы в конкурсах/Достижения
							+block-item(`2019`,`Почетная грамота ГК «Ростех»`)
	// end sManager